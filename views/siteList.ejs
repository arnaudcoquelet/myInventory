<script src="/js/angular_site.js"></script>
<script type="text/javascript">
    var geolocationId = <%= geolocation.id%>;
    var devicePath = '/json/devices/geolocation/<%=geolocation.id%>';
    var sortingOrder = 'id';
</script>

<div class="row">
    <div ng-controller="ctrlSite">
        <div class="panel panel-primary">
                <div ng-init="fecthItems()"></div>

                <div class="panel-heading">
                    <i class="glyphicon glyphicon-tasks"></i>
                    Sites ({{countItems()}})
                </div>

                <div class="panel-body">
                    <input type="text" ng-model="query" ng-change="search()" class="input-large search-query form-control pull-right" placeholder="Search" autofocus/>
                    <br/><br/>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th class="id col-sm-1"># &nbsp;<a ng-click="sort_by('id')"><i
                                            class="glyphicon glyphicon-sort"></i></a></th>
                            <th class="code col-sm-2">Code &nbsp;<a ng-click="sort_by('code')"><i
                                            class="glyphicon glyphicon-sort"></i></a></th>
                            <th class="name">Name &nbsp;<a ng-click="sort_by('name')"><i
                                            class="glyphicon glyphicon-sort"></i></a></th>
                            <th class="col-sm-1"><a href="#modalAdd" role="button" data-toggle="modal"
                                                    class="glyphicon glyphicon-plus-sign"></a></th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <td colspan="6">
                                    <ul class="pager">
                                        <li ng-class="{disabled: currentPage == 0}">
                                            <a href ng-click="prevPage()">« Prev</a>
                                        </li>
                                        <li ng-repeat="n in range(pagedItems.length)"
                                            ng-class="{active: n == currentPage}"
                                            ng-click="setPage()">
                                            <a href ng-bind="n + 1">1</a>
                                        </li>
                                        <li ng-class="{disabled: currentPage == pagedItems.length - 1}">
                                            <a href ng-click="nextPage()">Next »</a>
                                        </li>
                                    </ul>
                            </td>
                            </tr>
                        </tfoot>
                        <tbody>
                        <tr ng-repeat="item in pagedItems[currentPage] | orderBy:sortingOrder:reverse">
                            <td><a href="/geolocation/<%= geolocation.id%>/site/{{item.id}}">{{item.id}}</a></td>
                            <td>{{item.code}}</td>
                            <td>{{item.name}}</td>
                            <td>
                                <a href="#modalEdit" data-toggle="modal" data-id="{{item.id}}" data-code="{{item.code}}" data-name="{{item.name}}" class="open-Edit glyphicon glyphicon-pencil" title="edit"></a>
                                <a href="#modalDelete" data-toggle="modal" data-id="{{item.id}}" data-code="{{item.code}}" data-name="{{item.name}}" class="open-Delete glyphicon glyphicon-remove" title="delete"></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
<br/>

<% include deviceListAll_partial %>

<!--Modals-->
<div class="modal" tabindex="-1" role="dialog" id="modalAdd" aria-labelledby="modalAddLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Add a new Site</h3>
            </div>
            <div class="modal-body">
                <form role="form" class="form-horizontal" action="/geolocation/<%= geolocation.id%>/site/create" method="post">
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" autofocus/>
                            <input type="text" class="form-control" id="code" name="code" placeholder="Code"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    $(document).on("click", ".open-Edit", function () {
        var id = $(this).data('id');
        var name = $(this).data('name');
        var code = $(this).data('code');
        $(".editFields #id").val( id );
        $(".editFields #name").val( name );
        $(".editFields #code").val( code );
    })
</script>
<div class="modal" role="dialog" id="modalEdit" aria-labelledby="modalEditLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content col-md-8">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Edit</h3>
            </div>
            <div class="modal-body">
                <form role="form" id="editForm" class="form-horizontal" action="/geolocation/<%= geolocation.id%>/site/update" method="post">
                    <div class="form-group">
                        <div class="editFields">
                            <input type="hidden" class="form-control" id="id" name="id"/>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name"/>
                            <input type="text" class="form-control" id="code" name="code" placeholder="Code" autofocus/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary pull-right">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on("click", ".open-Delete", function () {
        var id = $(this).data('id');
        var name = $(this).data('name');
        var code = $(this).data('code');
        $(".deleteFields #id").val( id );
        $(".deleteFields #name").val( name );
        $(".deleteFields #code").val( code );
    })
</script>
<div class="modal" role="dialog" id="modalDelete" aria-labelledby="modalDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content col-md-8">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>You are about to delete</h3>
            </div>
            <div class="modal-body">
                <form role="form" id="deleteForm" class="form-horizontal" action="/geolocation/<%= geolocation.id%>/site/delete" method="post">
                    <div class="form-group">
                        <div class="deleteFields">
                            <input type="hidden" class="form-control" id="id" name="id"/>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" autofocus/>
                            <input type="text" class="form-control" id="code" name="code" placeholder="Code" autofocus/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger pull-right">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>