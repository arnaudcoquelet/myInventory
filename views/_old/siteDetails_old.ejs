<% layout('mainLayout') -%>
</br></br>
<div class="row">
    <div class="bs-example">
        <div>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-tasks"></i>
                    Buildings
                    <% if(buildings) { %>
                    (<%= buildings.length %>)
                    <% } %>
                </div>
                <div class="panel-body">
                    <p></p>
                </div>
                <table class="table table-striped">
                    <tr>
                        <th class="col-sm-1">#</th>
                        <th>Building</th>
                        <th class="col-sm-1"><a href="#modalAddBuilding" role="button" data-toggle="modal" class="glyphicon glyphicon-plus-sign"></a></th>
                    </tr>

                    <% if(buildings && buildings.length > 0) { %>
                    <% for(var i = 0; i < buildings.length; i++) { %>
                    <tr>
                        <td>
                            <a href="/sites/<%= site.code %>/building/<%= buildings[i].id %>"><%= buildings[i].id %></a>
                        </td>
                        <td><%= buildings[i].name %></td>
                        <td class="col-lg-1">
                             <a href='' class="glyphicon glyphicon-pencil" title="edit"></a>
                             <a href="" class="glyphicon glyphicon-remove" title="delete"></a>
                        </td>
                    </tr>
                    <% } %>
                    <% } %>
                </table>

                <div class="panel-body">
                    <p></p>
                </div>
            </div>


        </div>
        <!--Closets-->
    </div>

</div>
<br/>
<div class="row">
    <div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="glyphicon glyphicon-th"></i>
                Devices (0)
            </div>
            <div class="panel-body">
                <p></p>
            </div>

            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Hostname</th>
                    <th>IP</th>
                    <th>Building</th>
                    <th>Floor</th>
                    <th>Closet</th>
                    <th class="col-sm-1"><a href="#modalAddDevice" role="button" data-toggle="modal" class="glyphicon glyphicon-plus-sign"></a></th>
                </tr>
                <% var devices = [] %>
                <% if(devices) { %>
                <% if( devices instanceof Array && devices.length > 0 ) { %>
                <% for(var i = 0; i < devices.length; i++) { %>
                <tr>
                    <td><a href="/Sites/Devices/<%= devices[i].id %>"><%= devices[i].id %></a></td>
                    <td><%= devices[i].name %></td>
                    <td><a>Details</a> <a>Delete</a></td>
                </tr>
                <% } %>
                <% } %>
                <% } %>
            </table>

            <div class="panel-body">
                <p></p>
            </div>

        </div>
    </div>
</div>


<!--Modals-->
<div class="modal" tabindex="-1" role="dialog" id="modalAddBuilding" aria-labelledby="modalAddBuildingLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>

                <h3>Add a new Building to <%= site.code %></h3>
            </div>
            <div class="modal-body">
                <form role="form" class="form-horizontal" action="/Sites/<%= site.code %>/building" method="post">
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="buildingname" name="buildingname"
                                   placeholder="Name"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>